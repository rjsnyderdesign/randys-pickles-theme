@import url(http://fonts.googleapis.com/css?family=Roboto+Slab:400,700);
@import url(http://fonts.googleapis.com/css?family=Roboto:400,700);


html { background: #387d3d !important; }
.vertical #container,
.vertical #container.slim {
	width: 100% !important;
	overflow: hidden;
}


#header h1 .title,
#buttons input {
	background: #387d3d;
}

#footer {
width: 100% !important;
padding: 13px 0;
font-size: 12px;
background: #387d3d !important;
text-shadow: 1px 1px 0 #333;
color: #fff;
border-top: 1px solid #ccc;
}

#steps {
	color: rgba(0,0,0,0.6)
}

#thumbs {
	background: #d2e0bf;
}

#thumbs td {
clear: both;
display: block;
width: 100% !important;
border-top: none;
border-bottom: none;
font-size: 80%;
padding: 10px;
text-align: left;
vertical-align: middle;
min-height: 54px;
background: none;
}

#thumbs h3 {
	text-shadow: none;
}

#thumbs span {
	color: #387d3d;
	text-shadow: none;
}

#thumbs div.image,
#thumbs div {
	
	border: 1px solid #cadbb4;
}

#wallet {
	background: #e6efd8 !important;
	border-top: 1px solid #cadbb4;
}