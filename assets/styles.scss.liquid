/* 3.1 - Toolbar */
.toolbar { color: #333333; font-size: 18px; }
.toolbar li { line-height: 60px; list-style: none; padding-left: 25px; margin-bottom: 0 !important; }
.toolbar a { color: #333333; }
.toolbar a:hover { color: #ed8b07; }
