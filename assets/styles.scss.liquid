nav { position: relative; border-bottom: 1px solid $light-green-40; border-top: 1px solid $light-green-40; }
nav > ul > li { margin-bottom: 0; }
nav > ul > li > a { text-decoration: none; color: #f99f25; display: block; padding: 0 15px; font-size: 16px; line-height: 48px; height: 48px; font-weight: 700; text-transform: uppercase; }
